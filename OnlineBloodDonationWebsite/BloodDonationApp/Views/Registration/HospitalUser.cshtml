@model BloodDonationApp.Models.RegisterationMV
@{
    ViewBag.Title = "Hospital Registration";
}
<div class="appointment-form-wrapper theme-custom-box-shadow text-center clearfix wow zoomIn">
    <h3 class="join-heading join-heading-alt">Hospital Registration Form</h3>
    @using (Html.BeginForm("HospitalUser", "Registration", FormMethod.Post, new { @class = "appoinment-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.AccountStatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.Description)
        @Html.HiddenFor(model => model.User.EmailAddress)
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Hospital.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Hospital Name", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Hospital.FullName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Hospital.PhoneNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contact No" } })
            @Html.ValidationMessageFor(model => model.Hospital.PhoneNo, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Hospital.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @type = "email" } })
            @Html.ValidationMessageFor(model => model.Hospital.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Hospital.WebSite, new { htmlAttributes = new { @class = "form-control", @placeholder = "Website", @type = "url" } })
            @Html.ValidationMessageFor(model => model.Hospital.WebSite, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            <div class="select-style">
                @Html.DropDownList("CityID", null, "--Your City--", new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.CityID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.EditorFor(model => model.Hospital.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Hospital Address", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Hospital.Address, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12 col-sm-12 col-xs-12">
            <button id="btn_submit" class="btn btn-theme" type="submit">Submit</button>
        </div>
    }

